name: workflow

variables:
    GIT_SSL_NO_VERIFY: "true"
    EXEC: fliki
    CPU_LIMIT: 60
    FILE_LIMIT: 1000000
before_script:
    - make clean all -C .
stages:
    - build
    - run
    - test
build:
    stage: build
    script:
        - echo "Build done"
run:
    stage: run
    script:
        - ulimit -t ${CPU_LIMIT}
        - ulimit -f ${FILE_LIMIT}
        - bin/${EXEC} -h
test:
    stage: test
    script:
        - ulimit -t ${CPU_LIMIT}
        - ulimit -f ${FILE_LIMIT}
        - bin/${EXEC}_tests -S --verbose=0 --timeout 30
